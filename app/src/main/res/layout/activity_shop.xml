<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <Button
        android:id="@+id/next_shop_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_navigate_next_black_24dp"
        />


    <TextView
        android:id="@+id/introshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Chọn sản phẩm"
        android:textColor="#3DD598"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Hãy chọn sản phẩm dự trữ bạn muốn mua"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introshop" />


    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/horizontal_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/text_shop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/categories_all"
                android:background="@drawable/selected_category"
                android:text="Tất cả"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_shop" />
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/categories_covid"
                android:layout_width="wrap_content"
                android:background="@drawable/unselected_category"
                android:text="COVID 19"
                android:textColor="#899A96"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp" />
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/categories_toilet"
                android:layout_width="wrap_content"
                android:background="@drawable/unselected_category"
                android:text="Nhà vệ sinh"
                android:textColor="#899A96"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp" />
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/categories_women"
                android:layout_width="wrap_content"
                android:background="@drawable/unselected_category"
                android:text="Phụ nữ"
                android:textColor="#899A96"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp" />
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/categories_medical"
                android:layout_width="wrap_content"
                android:background="@drawable/unselected_category"
                android:text="Y tế"
                android:textColor="#899A96"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"/>

        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_categories">
        <GridLayout
            android:columnCount="2"
            android:rowCount="5"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            //Button Mask
            <CheckBox
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/mask"
                android:id="@+id/shop_mask"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity=""

                />

            //Button Hand sanitizer
            <CheckBox
                android:id="@+id/shop_handsanitizer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/handsanitizer"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textOff=""
                android:textOn=""
                android:gravity=""


                />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khẩu trang"
                android:textColor="#000000"
                ></TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gel rửa tay"
                android:textColor="#000000"
                ></TextView>

            //Button Gloves
            <CheckBox
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/gloves"
                android:id="@+id/shop_gloves"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""

                />
            //Button Toilet paper
            <CheckBox
                android:layout_marginTop="50dp"
                android:background="@drawable/toiletpaper"
                android:id="@+id/shop_toiletpaper"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""

                />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Găng tay y tế"
                android:textColor="#000000"
                ></TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giấy vệ sinh"
                android:textColor="#000000"
                ></TextView>

            //Button Soap
            <CheckBox
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/soap"
                android:id="@+id/shop_soap"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""
                />

            //Button Toothbrush
            <CheckBox
                android:layout_marginTop="50dp"
                android:background="@drawable/toothbrush"
                android:id="@+id/shop_toothbrush"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""
                />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xà phòng"
                android:textColor="#000000"
                ></TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kem đánh răng"
                android:textColor="#000000"
                ></TextView>

            //Button Period pad
            <CheckBox
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/period"
                android:id="@+id/shop_period"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""
                />

            //Button First-aid kit
            <CheckBox
                android:layout_marginTop="50dp"
                android:background="@drawable/firstaidkit"
                android:id="@+id/shop_kit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""
                />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Băng vệ sinh"
                android:textColor="#000000"
                ></TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hộp sơ cứu"
                android:textColor="#000000"
                ></TextView>

            //Button Medicine
            <CheckBox
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/medicine"
                android:id="@+id/shop_medicine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textOff=""
                android:textOn=""
                android:gravity=""
                />
            <TextView></TextView>

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuốc"
                android:textColor="#000000"
                ></TextView>

        </GridLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>